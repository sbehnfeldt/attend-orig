{% extends 'base.html.twig' %}

{% block title %}Attend | Classrooms{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="js/classrooms.bundle.js"></script>
{% endblock %}


{% block main %}
    <h1>Classrooms</h1>

    <table id="classrooms-table" class="display compact">
        <thead>
            <tr>
                <th>ID</th>
                <th>Label</th>
                <th>Order</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div id="classroom-props-dlg" title="Add/Edit Classroom">
        <form>
            <p class="update-tips"></p>
            <input class="hidden" name="Id">
            <div class="row">
                <div class="col-xs-12">
                    <label>Classroom Name</label>
                    <input type="text" name="Label" class="required">
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label>Order</label>
                    <input type="number" name="Ordering">
                </div>
            </div>
        </form>
    </div>
{% endblock %}
