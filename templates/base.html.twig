                <a class="navbar-brand" href="/">Attend</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/attendance">Attendance</a></li>
                        <li class="nav-item"><a class="nav-link" href="/enrollment">Enrollment</a></li>
                        <li class="nav-item"><a class="nav-link" href="/classrooms">Classrooms</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <main class="container">{% block main %}Insert Content Here{% endblock %}</main>

        {% block scripts %}{% endblock %}
    </body>
</html>
